/* pages/goods_list/goods_list.wxss */
@import "../footer/footer.wxss";

.search {
  width: 94%;
  height: 80rpx;
  box-sizing: border-box;
  border: 1rpx solid #d7d7d7;
  border-radius: 10rpx;
  margin: 15rpx auto 0;
  position: relative;
}

.search image {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  top: 27rpx;
  left: 25rpx;
}

.search input {
  display: block;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #333;
  padding: 14rpx 0 14rpx 95rpx;
}

.switch_box {
  width: 100%;
  height: 85rpx;
  line-height: 85rpx;
  font-size: 28rpx;
  color: #030303;
  text-align: center;
  display: flex;
}

.switch_box view {
  flex: 1;
  border-bottom: 2rpx solid #fff;
  text-align: center;
  line-height: 85rpx;
  height: 85rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
}

.switch_box view.active {
  border-color: #9c9c9c;
  color: #dc4e49;
}

.switch_box view text {
  display: inline-block;
  padding-right: 10rpx;
  font-size: 28rpx;
}

.switch_box view image {
  display: inline-block;
  width: 14rpx;
  height: 30rpx;
  line-height: 85rpx;
}

.switch_box view image.hide {
  display: none;
}

.switch_box view image.show {
  display: inline-block;
}

.list_box {
  width: 97%;
  padding: 20rpx 1.5% 120rpx;
  overflow: hidden;
  background: #efeef4;
}

.good {
  width: 47%;
  margin: 1.5%;
  box-sizing: border-box;
  background: #fff;
  padding: 20rpx;
  float: left;
}

.img {
  display: block;
  overflow: hidden;
  width: 100%;
  position: relative;
}

.img text {
  display: inline-block;
  background: #b3b3b3;
  color: #fff;
  text-align: center;
  font-size: 16rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 8rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}

.good image {
  width: 100%;
  height: 300rpx;
  display: block;
}

.title {
  height: 84rpx;
  line-height: 42rpx;
  font-size: 28rpx;
  color: #4c4c4c;
  display: block;
}

.jiege {
  height: 90rpx;
  position: relative;
}

.jiage_box {
  display: block;
  width: 100%;
  overflow: hidden;
  height: 45rpx;
}

.jiege text {
  display: block;
  float: left;
}

.jiege text.small {
  color: #df0c1d;
  font-size: 28rpx;
  line-height: 55rpx;
}

.jiege text.yuan {
  color: #df0c1d;
  font-size: 40rpx;
}

.jiege text.jiao {
  color: #df0c1d;
  font-size: 24rpx;
  line-height: 55rpx;
}

.jiege text.del {
  font-size: 24rpx;
  color: #666;
  line-height: 45rpx;
  margin-left: 15rpx;
  text-decoration: line-through;
  float: left;
}

.jiege navigator {
  width: 65rpx;
  height: 65rpx;
  background: #ff0080;
  border-radius: 10rpx;
  position: absolute;
  right: 0;
  top: 17rpx;
}

.jiege navigator image {
  display: block;
  margin: 15rpx auto;
  width: 37rpx;
  height: 34rpx;
}

.list_box .ling {
  width: 100%;
  text-align: center;
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 50rpx;
}


.fix_bot {
  height: 100rpx;
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0rpx;
  z-index: 9;
  background: #fff;
  display: flex;
  display: -webkit-flex;
  align-items: center;
}

.jia {
  padding-left: 18rpx;
}

.jiage_box {
  display: block;
  margin-bottom: 10rpx;
}

.jiesheng {
  display: block;
  height: 35rpx;
  line-height: 35rpx;
  color: #999;
  font-size: 24rpx;
}

.fix_bot navigator {
  width: 234rpx;
  height: 100rpx;
  background: #df0c1d;
  color: #fff;
  font-size: 32rpx;
  position: absolute;
  right: 0;
  top: 0;
  text-align: center;
  line-height: 100rpx;
}

.jiage_box text.small {
  color: #df0c1d;
  font-size: 28rpx;
}

.jiage_box text.yuan {
  color: #df0c1d;
  font-size: 28rpx;
}

.jiage_box text.jiao {
  color: #df0c1d;
  font-size: 24rpx;
}

.quan {
  font-size: 32rpx;
  color: #333;
  padding-left: 33rpx;
}

.quan text {
  margin-left: 25rpx;
}
//////////
.ceng {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.54);
  z-index: 99;
  display: block;
}

.xguige {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: #fff;
  display: block;
}

.close {
  display: block;
  position: absolute;
  right: 11rpx;
  top: -32rpx;
  width: 61rpx;
  height: 61rpx;
}

.close image {
  display: block;
  width: 61rpx;
  height: 61rpx;
}

.guigecon {
  padding: 0 15rpx 10rpx;
}

.spinfo {
  margin-top: -28rpx;
  display: flex;
  display: -ms-flexbox;
  display: -webkit-flex;
  border-bottom: 1px solid #bdbdbd;
  padding-bottom: 25rpx;
}

.spinfo image {
  display: block;
  width: 192rpx;
  height: 192rpx;
  border: 1px solid #ccc;
  border-radius: 5px;
  margin-right: 26rpx;
  background: #fff;
}

.spinfor {
  padding-top: 50rpx;
  flex: 1;
  -webkit-flex: 1;
}

.spinfor view {
  font-size: 24rpx;
  color: #151415;
  margin-bottom: 10rpx;
}

.spinfor view text {
  font-size: 32rpx;
  color: #df0b1b;
  margin-left: 18rpx;
}

.xzgg {
  padding-top: 20rpx;
}

.xzgg view {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.xzgg .a {
  display: inline-block;
  height: 55rpx;
  line-height: 55rpx;
  border: 1px solid #ccc;
  padding: 0 25rpx;
  border-radius: 4px;
  font-size: 26rpx;
  color: #666;
  margin: 0 15rpx 15rpx 0;
}

.xzgg .active {
  border: 1px solid red;
  color: #df0b1b;
}

.num {
  border: 1px solid #ccc;
  width: 179rpx;
  height: 59rpx;
  border-radius: 4px;
  box-sizing: content-box;
  display: flex;
  display: -webkit-flex;
}

.num .jian, .num .jia {
  width: 59rpx;
  height: 59rpx;
  text-align: center;
  line-height: 59rpx;
  font-size: 24rpx;
  color: #5c5c5c;
  padding: 0;
  margin: 0;
}

.numipt {
  width: 60rpx;
  height: 59rpx;
  color: #050505;
  font-size: 24rpx;
  border-left: 2rpx solid #ccc;
  border-right: 2rpx solid #ccc;
  background: none;
  text-align: center;
  flex: 1;
}

.xqbtn button {
  font-size: 24rpx;
  color: #fff;
  height: 20x;
  line-height: 20px;
  text-align: center;
  width: 20%;
  border-radius: 0;
  float: right;

}

.xqbtn button.ljgma {
  background: #ccc;
}

.xqbtn button.ljgma.active {
  background: #df0b1b;
}

.xqbtn button.gwca {
  background: #bbb;
}

.xqbtn button.gwca.active {
  background: #e53736;
}

.xqbtn input {
  font-size: 24rpx;
  color: #fff;
  float: left;
  height: 104rpx;
  line-height: 104rpx;
  text-align: center;
  width: 50%;
}

.xqbtn input.ljgma {
  background: #ccc;
}

.xqbtn input.ljgma.active {
  background: #f45150;
}

.xqbtn input.gwca {
  background: #bbb;
}

.xqbtn input.gwca.active {
  background: #e53736;
}
